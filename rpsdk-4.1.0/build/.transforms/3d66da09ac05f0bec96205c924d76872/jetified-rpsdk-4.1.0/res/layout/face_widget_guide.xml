<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.alibaba.security.biometrics.logic.view.widget.GuideWidget
        android:id="@+id/widget_abfl_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <TextView
            android:id="@+id/abfl_widget_guide_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200px"
            android:layout_marginBottom="20px"
            android:gravity="center_horizontal"
            android:text="请进行人脸验证"
            android:textColor="#000000"
            android:textSize="42px" />

        <TextView
            android:id="@+id/abfl_widget_guide_subtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/abfl_widget_guide_text"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="90px"
            android:layout_marginRight="90px"
            android:gravity="center_horizontal"
            android:text="需您本人完成如下动作"
            android:textColor="#333333"
            android:textSize="30px" />

        <ImageView
            android:id="@+id/abfl_widget_guide_icon"
            android:layout_width="280px"
            android:layout_height="280px"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/abfl_widget_guide_icon_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/abfl_widget_guide_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48px"
            android:gravity="center"
            android:text="点下头"
            android:textColor="#000000"
            android:textSize="36px" />

        <Button
            android:id="@+id/abfl_widget_guide_back_btn"
            android:layout_width="match_parent"
            android:layout_height="105px"
            android:layout_above="@+id/abfl_widget_guide_copyright"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:background="@drawable/face_nav_button"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:textAlignment="center"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/abfl_widget_guide_btn"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_above="@+id/abfl_widget_guide_copyright"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:background="#00000000"
            android:gravity="center"
            android:text="点击验证 (10)"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="32px" />

        <TextView
            android:id="@+id/abfl_widget_guide_copyright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30px"
            android:layout_marginBottom="60px"
            android:gravity="center"
            android:text="人脸信息非您许可不会用于其它用途"
            android:textColor="#cccccc"
            android:textSize="26px" />

    </com.alibaba.security.biometrics.logic.view.widget.GuideWidget>
</merge>