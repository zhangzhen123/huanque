<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/abfl_detect_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/ab_face_color_c_white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:scrollbars="vertical">

    <!--&lt;!&ndash; 照相机部件 &ndash;&gt;-->
    <com.alibaba.security.biometrics.logic.view.widget.CameraWidget
        android:id="@+id/abfl_widget_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <com.alibaba.security.biometrics.logic.view.custom.CameraSurfaceView
            android:id="@+id/abfl_widget_camera_surface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop" />
    </com.alibaba.security.biometrics.logic.view.widget.CameraWidget>

    <!-- 预检测页部件（引导页到活体检测页部件的中间状态 - 为了显示动画效果） -->
    <include
        android:id="@+id/abfl_widget_predetectaction"
        layout="@layout/face_widget_predetectaction" />

    <!-- 活体检测页部件 -->
    <include
        android:id="@+id/abfl_widget_detectaction"
        layout="@layout/face_widget_detectaction_biometrics" />

    <!-- 活体检测结果页部件 -->
    <include
        android:id="@+id/abfl_widget_detectactionresult"
        layout="@layout/face_widget_detectactionresult" />

    <!-- 引导页部件 -->
    <include
        android:id="@+id/abfl_widget_guide"
        layout="@layout/face_widget_guide" />

    <!-- 标题栏部件（关闭、声音按钮）-->
    <include
        android:id="@+id/abfl_widget_titlebar"
        layout="@layout/face_widget_titlebar" />


</RelativeLayout>