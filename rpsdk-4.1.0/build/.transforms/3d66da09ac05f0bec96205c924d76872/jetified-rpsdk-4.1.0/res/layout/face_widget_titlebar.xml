<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.alibaba.security.biometrics.logic.view.widget.TitleBarWidget
        android:id="@+id/widget_title_bar"
        android:layout_width="fill_parent"
        android:visibility="invisible"
        android:layout_height="56dip">

        <ImageView
            android:id="@+id/abfl_widget_tb_close"
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="20dip"
            android:src="@drawable/face_top_back" />

        <View
            android:id="@+id/abfl_widget_tb_close_area"
            android:layout_width="50dip"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/abfl_widget_tb_sound_switch"
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dip"
            android:layout_marginRight="20dip"
            android:src="@drawable/face_top_sound_on" />

        <View
            android:id="@+id/abfl_widget_tb_sound_switch_area"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" />

    </com.alibaba.security.biometrics.logic.view.widget.TitleBarWidget>
</merge>