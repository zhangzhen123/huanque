<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.alibaba.security.biometrics.logic.view.widget.DetectActionResultWidget
        android:id="@+id/widget_abfl_detectactionresult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <ImageView
            android:id="@+id/abfl_widget_dar_icon"
            android:layout_width="178px"
            android:layout_height="178px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="412px"
            android:visibility="visible" />


        <TextView
            android:id="@+id/abfl_widget_dar_title"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_below="@+id/abfl_widget_dar_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60px"
            android:gravity="center_horizontal"
            android:text="验证不通过"
            android:textColor="#333333"
            android:textSize="42px" />

        <TextView
            android:id="@+id/abfl_widget_dar_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/abfl_widget_dar_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px"
            android:gravity="center_horizontal"
            android:text="Message2"
            android:textColor="#333333"
            android:textSize="30px"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/abfl_widget_dar_back_btn"
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:layout_below="@+id/abfl_widget_dar_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30px"
            android:layout_marginTop="50px"
            android:layout_marginRight="30px"
            android:scaleType="fitCenter"
            android:src="@drawable/face_nav_button" />

        <Button
            android:id="@+id/abfl_widget_dar_btn"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:layout_alignTop="@+id/abfl_widget_dar_back_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:background="#00000000"
            android:text="再来一次"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="32px" />

        <Button
            android:id="@+id/abfl_widget_dar_other_btn"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:layout_below="@+id/abfl_widget_dar_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30px"
            android:layout_marginTop="35px"
            android:layout_marginRight="30px"
            android:background="#00000000"
            android:text="使用其他登录方式"
            android:textAlignment="center"
            android:textColor="#3898E1"
            android:textSize="28px" />

    </com.alibaba.security.biometrics.logic.view.widget.DetectActionResultWidget>
</merge>