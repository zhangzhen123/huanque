<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.alibaba.security.biometrics.logic.view.widget.DetectActionWidget
        android:id="@+id/widget_abfl_detectaction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- 动作引导（活体动作的直观引导） -->
        <RelativeLayout
            android:id="@+id/abfl_widget_da_actionGuidance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:visibility="gone">

            <!-- 图片动画下面模糊遮罩 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.2"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">
                <!-- 图片动画 -->
                <ImageView
                    android:id="@+id/abfl_widget_da_actionGuidance_image"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitCenter" />
                <!-- 图片动画描述 -->
                <TextView
                    android:id="@+id/abfl_widget_da_actionGuidance_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请按图示做动作"
                    android:textColor="#FFFDFD"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- 图片即时引导（基于用户不正确行为给出的图片类型实时引导） -->
        <ImageView
            android:id="@+id/abfl_widget_da_imageImmediateGuidance"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_centerHorizontal="true"
            android:alpha="0.9"
            android:scaleType="fitCenter"
            android:src="@drawable/face_detect_human_type"
            android:visibility="gone" />

        <!-- 文字即时引导（基于用户不正确行为给出的文字类型实时引导） -->
        <RelativeLayout
            android:id="@+id/abfl_widget_da_textImmediateGuidance"
            android:layout_width="match_parent"
            android:layout_height="136px"
            android:layout_centerHorizontal="true"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.4"
                android:background="#000000" />

            <TextView
                android:id="@+id/abfl_widget_da_textImmediateGuidance_text"
                android:layout_width="wrap_content"
                android:layout_height="136px"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </RelativeLayout>

        <!-- 取景框圆形罩 -->
        <com.alibaba.security.biometrics.logic.view.custom.MaskView
            android:id="@+id/abfl_widget_da_maskview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!-- 取景框圆形罩 - 模糊 -->
        <View
            android:id="@+id/abfl_widget_da_maskview_blurview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:alpha="0.7"
            android:background="@color/ab_face_color_white"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical">
            <!-- 主提示（当前需要用户操作的内容，或需要用户重点关注的内容） -->
            <TextView
                android:id="@+id/abfl_widget_da_mainPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/widget_da_self_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="请 *三本人操作" />
        </LinearLayout>

        <!-- 检测等待 -->
        <RelativeLayout
            android:id="@+id/abfl_widget_da_waiting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2F2F2F"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/abfl_widget_da_waiting_image"
                android:layout_width="178px"
                android:layout_height="178px"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="412px"
                android:src="@drawable/face_waiting"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/abfl_widget_da_waiting_scan"
                android:layout_width="150px"
                android:layout_height="150px"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="426px"
                android:visibility="visible">

                <View
                    android:id="@+id/abfl_widget_da_waiting_scan_mask"
                    android:layout_width="match_parent"
                    android:layout_height="145px"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#FFFFFF"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/abfl_widget_da_waiting_scan_line"
                    android:layout_width="match_parent"
                    android:layout_height="5px"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="#FFFFFF"
                    android:visibility="visible" />

            </RelativeLayout>

            <TextView
                android:id="@+id/abfl_widget_da_waiting_text"
                android:layout_width="match_parent"
                android:layout_height="55px"
                android:layout_below="@+id/abfl_widget_da_waiting_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40px"
                android:gravity="center_horizontal"
                android:text="正在处理..."
                android:textColor="#CFCFCF"
                android:textSize="40px"
                android:visibility="invisible" />

        </RelativeLayout>

    </com.alibaba.security.biometrics.logic.view.widget.DetectActionWidget>
</merge>