    <style name="Theme.AppCompat.Light.NoActionBar.NoAnim" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="LiveLayerAnimMessage">
