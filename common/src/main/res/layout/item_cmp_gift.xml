<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <TextView
        android:id="@+id/gift_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/black_666"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gift_price"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"
        android:ellipsize="end"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lines="1"
        android:textColor="@color/black_c5"
        android:textSize="10sp"
        tools:text="棒棒糖" />


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/gift_icon"
        android:layout_width="66dp"
        android:layout_height="54dp"
        android:layout_above="@+id/gift_name"
        android:layout_centerHorizontal="true"
        app:actualImageScaleType="fitCenter"
        app:failureImage="@mipmap/logo_placeholder_medium_gift" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/leftTipImage"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:visibility="gone"
        app:actualImageScaleType="fitEnd" />

    <LinearLayout
        android:id="@+id/ll_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:divider="@drawable/divider_tag"
        android:gravity="right"
        android:orientation="vertical"
        android:showDividers="middle" />


    <TextView
        android:id="@+id/giftBagInfo"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="3dp"
        android:background="@drawable/sel_bg_gift_count"
        android:paddingLeft="5dp"
        android:paddingRight="4dp"
        android:textColor="@color/sel_bag_count"
        android:textSize="10sp" />


    <View
        android:id="@+id/view_dot"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_alignParentRight="true"
        android:layout_margin="2dp"
        android:background="@drawable/bg_gift_count_change"
        android:visibility="gone" />


</RelativeLayout>