<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <View
        android:id="@+id/view_right"
        android:layout_width="0px"
        android:layout_height="2dp"
        android:background="@color/primary_color"
        app:layout_constraintBottom_toBottomOf="@+id/iv_tag_sel"
        app:layout_constraintLeft_toRightOf="@id/iv_tag_sel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_tag_sel" />

    <View
        android:id="@+id/view_left"
        android:layout_width="0px"
        android:layout_height="2dp"
        android:background="@color/primary_color"
        app:layout_constraintBottom_toBottomOf="@+id/iv_tag_sel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_tag_sel"
        app:layout_constraintTop_toTopOf="@+id/iv_tag_sel" />

    <ImageView
        android:id="@+id/iv_tag_sel"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:src="@drawable/sel_tag_tab"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="柯亨" />


    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="18dp"
        android:layout_height="9dp"
        android:src="@mipmap/icon_arrow_bottom"
        app:layout_constraintLeft_toLeftOf="@id/iv_tag_sel"
        app:layout_constraintRight_toRightOf="@id/iv_tag_sel"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
