<?xml version="1.0" encoding="utf-8"?>
<com.julun.huanque.common.widgets.EventConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/con_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_update_info">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="社交名片"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="真实信息可提高交友匹配度"
        android:textColor="@color/black_999"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_header"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="90dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="@mipmap/logo_placeholder_medium"
        app:placeholderImageScaleType="fitXY"
        app:roundAsCircle="true" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/icon_camera"
        app:layout_constraintBottom_toBottomOf="@id/sdv_header"
        app:layout_constraintRight_toRightOf="@id/sdv_header" />

    <View
        android:id="@+id/view_nickname"
        android:layout_width="1px"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sdv_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:text="昵 称："
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@id/view_nickname"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_nickname" />

    <ImageView
        android:id="@+id/iv_clear_nickname"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_marginRight="30dp"
        android:paddingLeft="10dp"
        android:src="@mipmap/icon_close_round_01"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/view_nickname"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_nickname" />

    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_marginLeft="96dp"
        android:background="@null"
        android:gravity="center_vertical|left"
        android:hint="填写昵称（最多10个字）"
        android:maxLength="10"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black_333"
        android:textColorHint="@color/black_999"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@id/view_nickname"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_clear_nickname"
        app:layout_constraintTop_toTopOf="@id/view_nickname" />

    <View
        android:layout_width="0px"
        android:layout_height="2px"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#DEDEDE"
        app:layout_constraintBottom_toBottomOf="@id/view_nickname"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/view_birthday"
        android:layout_width="1px"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_clear_nickname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:text="生 日："
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@id/view_birthday"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_birthday" />


    <TextView
        android:id="@+id/tv_bir"
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_marginLeft="96dp"
        android:layout_marginRight="30dp"
        android:drawableRight="@mipmap/icon_arrow_msg_setting"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="选择生日"
        android:maxLines="1"
        android:textColor="@color/black_333"
        android:textColorHint="@color/black_999"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@id/view_birthday"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_birthday" />

    <View
        android:layout_width="0px"
        android:layout_height="2px"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#DEDEDE"
        app:layout_constraintBottom_toBottomOf="@id/view_birthday"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <View
        android:id="@+id/view_invitation_code"
        android:layout_width="1px"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_birthday" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:text="邀请码："
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@id/view_invitation_code"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_invitation_code" />

    <ImageView
        android:id="@+id/iv_invitation_code"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_marginRight="30dp"
        android:paddingLeft="10dp"
        android:src="@mipmap/icon_close_round_01"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/view_invitation_code"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_invitation_code" />

    <EditText
        android:id="@+id/et_invitation_code"
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_marginLeft="96dp"
        android:background="@null"
        android:gravity="center_vertical|left"
        android:hint="请输入邀请码（选填）"
        android:maxLength="10"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black_333"
        android:textColorHint="@color/black_999"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@id/view_invitation_code"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_clear_nickname"
        app:layout_constraintTop_toTopOf="@id/view_invitation_code" />

    <View
        android:layout_width="0px"
        android:layout_height="2px"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#DEDEDE"
        app:layout_constraintBottom_toBottomOf="@id/view_invitation_code"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="0px"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/sel_phone_num"
        android:gravity="center"
        android:text="用该身份交友"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_invitation_code" />

    <View
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_next" />

</com.julun.huanque.common.widgets.EventConstraintLayout>
