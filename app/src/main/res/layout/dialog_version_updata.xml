<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/linearlayout_001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="203dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/find_new_version"
                android:textColor="@color/black_333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/version_num"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="(版本号)"
                android:textColor="@color/black_333"
                android:textSize="16sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/version_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="更新内容"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black_999" />
        </ScrollView>

        <TextView
            android:id="@+id/ok_btn"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/selector_btn_solid"
            android:gravity="center"
            android:text="@string/update_now"
            android:textColor="@color/black_333"
            android:textSize="16sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/dialog_cancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="center"
        android:layout_alignRight="@id/linearlayout_001"
        android:layout_marginTop="45dp"
        android:src="@mipmap/icon_close_black_01" />
</RelativeLayout>