<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F5">

    <com.julun.huanque.common.widgets.HeaderPageView
        android:id="@+id/header_page"
        android:layout_width="0px"
        android:layout_height="44dp"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view_fold_stranger_msg"
        android:layout_width="0px"
        android:layout_height="54dp"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_page" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="关闭直播间后小窗播放"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@id/view_fold_stranger_msg"
        app:layout_constraintLeft_toLeftOf="@id/view_fold_stranger_msg"
        app:layout_constraintTop_toTopOf="@id/view_fold_stranger_msg" />

    <ImageView
        android:id="@+id/iv_floating"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_marginRight="15dp"
        android:src="@drawable/sel_msg_setting"
        app:layout_constraintBottom_toBottomOf="@id/view_fold_stranger_msg"
        app:layout_constraintRight_toRightOf="@id/view_fold_stranger_msg"
        app:layout_constraintTop_toTopOf="@id/view_fold_stranger_msg" />
</androidx.constraintlayout.widget.ConstraintLayout>
