<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/clRealRootView"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:scaleType="fitStart"
        android:src="@mipmap/icon_back_black_01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实名认证"
        android:textColor="@color/black_333"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivback"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivback" />


    <TextView
        android:id="@+id/tvText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:gravity="center"
        android:text="根据相关规定，您需要通过实名认证才能提现"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <LinearLayout
        android:id="@+id/llRealnameRootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_22"
        android:layout_marginTop="@dimen/dimen_70"
        android:layout_marginRight="@dimen/dimen_22"
        android:background="@drawable/hq_realname_bg_shape_border"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvText">

        <TextView
            android:id="@+id/tvRealname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名"
            android:textColor="@color/black_666"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/edtRealname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_18"
            android:background="@null"
            android:hint="请输入您的真实姓名"
            android:maxLines="1"
            android:singleLine="true"
            android:text="万致远"
            android:textColor="@color/black_666"
            android:textColorHint="@color/black_999"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llIDCardRootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_22"
        android:layout_marginRight="@dimen/dimen_22"
        android:background="@drawable/hq_realname_bg_shape_border"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llRealnameRootView">

        <TextView
            android:id="@+id/tvIDCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号"
            android:textColor="@color/black_666"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/edtIDCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_18"
            android:background="@null"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="请输入您的身份证号"
            android:maxLength="18"
            android:maxLines="1"
            android:singleLine="true"
            android:text="362232199202200016"
            android:textColor="@color/black_666"
            android:textColorHint="@color/black_999"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:text="该信息仅用于支付宝核对您的身份信息，不作他用"
        android:textColor="@color/black_666"
        android:textSize="@dimen/dimen_13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llIDCardRootView" />

    <Button
        android:id="@+id/btnCommit"
        android:layout_width="@dimen/dimen_315"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_100"
        android:background="@drawable/hq_realname_bg_sel_btn"
        android:enabled="true"
        android:gravity="center"
        android:text="人脸认证"
        android:textColor="@color/black_333"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTips" />

</androidx.constraintlayout.widget.ConstraintLayout>