<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clRealRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/dimen_10"
        android:scaleType="fitStart"
        android:src="@mipmap/icon_back_black_01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实名认证"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivback"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivback" />


    <TextView
        android:id="@+id/tvText"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_29"
        android:layout_marginTop="@dimen/dimen_44"
        android:background="#FFFAEE"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dimen_15"
        android:text="请填写您的真实信息，一经通过将无法修改"
        android:textColor="#FFFFBA00"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_15"
        android:text="实名认证"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_53"
        android:text="该信息仅用于核对您的身份信息，不作他用"
        android:textColor="@color/black_999"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvText" />

    <TextView
        android:id="@+id/tvRealname"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_52"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_88"
        android:gravity="center_vertical"
        android:text="真实姓名"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvText" />

    <EditText
        android:id="@+id/edtRealname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:background="@null"
        android:hint="请输入您的真实姓名"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black_333"
        android:textColorHint="@color/text_enable"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@+id/tvRealname"
        app:layout_constraintLeft_toRightOf="@+id/tvRealname"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvRealname" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginTop="@dimen/dimen_5"
        android:background="@color/divide_color"
        app:layout_constraintLeft_toLeftOf="@+id/edtRealname"
        app:layout_constraintRight_toRightOf="@+id/edtRealname"
        app:layout_constraintTop_toBottomOf="@+id/edtRealname" />

    <TextView
        android:id="@+id/tvIDCard"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_52"
        android:layout_marginLeft="@dimen/dimen_15"
        android:gravity="center_vertical"
        android:text="身份证号"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRealname" />

    <EditText
        android:id="@+id/edtIDCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:background="@null"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:hint="请输入您的身份证号"
        android:maxLength="18"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black_333"
        android:textColorHint="@color/text_enable"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@+id/tvIDCard"
        app:layout_constraintLeft_toRightOf="@+id/tvIDCard"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvIDCard" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginTop="@dimen/dimen_5"
        android:background="@color/divide_color"
        app:layout_constraintLeft_toLeftOf="@+id/edtIDCard"
        app:layout_constraintRight_toRightOf="@+id/edtIDCard"
        app:layout_constraintTop_toBottomOf="@+id/edtIDCard" />

    <Button
        android:id="@+id/btnCommit"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_marginBottom="@dimen/dimen_15"
        android:background="@drawable/hq_realname_bg_sel_btn"
        android:enabled="false"
        android:gravity="center"
        android:text="人脸认证"
        android:textColor="@color/black_999"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>