<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimen_75"
    android:layout_height="wrap_content">

    <com.julun.huanque.common.widgets.PhotoHeadView
        android:id="@+id/sdvHeadImage"
        android:layout_width="@dimen/dimen_74"
        android:layout_height="@dimen/dimen_74"
        app:failureImageScaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundAsCircle="true" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivHeadRoyal"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="@dimen/dimen_7"
        app:layout_constraintBottom_toBottomOf="@+id/sdvHeadImage"
        app:layout_constraintRight_toRightOf="@+id/sdvHeadImage" />

    <TextView
        android:id="@+id/tvHeadNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sdvHeadImage"
        tools:text="尼古拉斯赵四" />


</androidx.constraintlayout.widget.ConstraintLayout>