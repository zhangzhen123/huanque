<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/pk_width"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <com.julun.huanque.common.widgets.bgabanner.BGABanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        app:banner_indicatorGravity="bottom|center_horizontal"
        app:banner_pageChangeDuration="1000"
        app:banner_pointAutoPlayAble="true"
        app:banner_pointAutoPlayInterval="5000"
        app:banner_pointContainerBackground="@color/transparent"
        app:banner_pointContainerLeftRightPadding="0dp"
        app:banner_pointDrawable="@drawable/bga_banner_selector_point_solid"
        app:banner_pointTopBottomMargin="0dp"
        app:banner_tipTextSize="12sp" />

</FrameLayout>
