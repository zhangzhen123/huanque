<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fl_start_dot"
        android:layout_width="@dimen/dimen_16"
        android:layout_height="@dimen/dimen_16"
        android:visibility="gone"
        android:alpha="0"
        tools:visibility="visible">

        <View
            android:id="@+id/v_dot_bg_start"
            android:layout_width="@dimen/dimen_8"
            android:layout_height="@dimen/dimen_8"
            android:layout_gravity="center"
            android:background="@drawable/bg_shape_dot_p50" />

        <View
            android:id="@+id/start_dot"
            android:layout_width="4dp"
            android:layout_height="@dimen/dimen_4"
            android:layout_gravity="center"
            android:background="@drawable/bg_shape_white1"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_10" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_26"
        android:layout_marginStart="@dimen/dimen_5"
        android:layout_marginEnd="@dimen/dimen_5"
        android:background="@drawable/bg_shape_card_tag_text"
        android:gravity="center"
        android:paddingStart="@dimen/dimen_8"
        android:paddingEnd="@dimen/dimen_8">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_tag"
            android:layout_width="@dimen/dimen_18"
            android:layout_height="@dimen/dimen_18"
            app:actualImageScaleType="centerCrop"
            app:placeholderImage="@mipmap/logo_placeholder_small" />

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_3"
            android:layout_marginEnd="@dimen/dimen_3"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            tools:text="测试测试测试测试" />

        <ImageView
            android:layout_width="6dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_forward_white_01" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_end_dot"
        android:layout_width="@dimen/dimen_16"
        android:layout_height="@dimen/dimen_16"
        android:alpha="0"
        android:visibility="gone">
        <View
            android:id="@+id/v_dot_bg_end"
            android:layout_width="@dimen/dimen_8"
            android:layout_height="@dimen/dimen_8"
            android:layout_gravity="center"
            android:background="@drawable/bg_shape_dot_p50" />

        <View
            android:id="@+id/end_dot"
            android:layout_width="4dp"
            android:layout_height="@dimen/dimen_4"
            android:layout_gravity="center"
            android:background="@drawable/bg_shape_white1"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_10" />

    </FrameLayout>

</merge>

