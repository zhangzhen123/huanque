<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/dimen_10"
    app:cardBackgroundColor="@color/black_999"
    app:cardMaxElevation="@dimen/dimen_3">

    <LinearLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/card_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:actualImageScaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:placeholderImage="@mipmap/logo_placeholder_small"
                app:roundAsCircle="true" />

            <TextView
                android:id="@+id/tv_wish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_solid_grey_btn1"
                android:gravity="start|center_vertical"
                android:includeFontPadding="false"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_15"
                android:padding="@dimen/dimen_5"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintBottom_toBottomOf="@+id/card_img"
                app:layout_constraintEnd_toStartOf="@+id/card_img"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="谈甜甜的恋爱" />


            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_8"
                android:gravity="start|center_vertical"
                android:includeFontPadding="false"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/ll_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_img"
                tools:text="清蝶泳" />

            <ImageView
                android:id="@+id/iv_auth_tag"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_18"
                android:layout_marginStart="@dimen/dimen_4"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_user_name"
                app:layout_constraintStart_toEndOf="@+id/tv_user_name"
                app:layout_constraintTop_toTopOf="@+id/tv_user_name" />

            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/black_999"
                android:textSize="@dimen/sp_13"
                android:layout_marginTop="@dimen/dimen_15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
                tools:text="抠脚大抠脚大汉抠脚大汉抠脚大汉抠脚大汉抠脚大汉抠脚大汉抠脚大汉抠脚大汉抠脚大汉抠脚大汉汉抠脚大汉抠脚大汉抠脚大汉抠脚大汉抠脚大汉抠脚大汉抠脚大汉抠脚大汉抠脚大汉" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/black_666" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_product_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_8"
            android:background="@drawable/bg_shape_black_p20"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="@dimen/dimen_5"
            android:text="产品型号"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_14" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_35"
            android:layout_marginTop="@dimen/dimen_10"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="@dimen/dimen_18"
                android:layout_height="@dimen/dimen_18"
                android:layout_marginStart="@dimen/dimen_15"
                android:gravity="center"
                android:scaleType="fitCenter"
                tools:src="@mipmap/icon_sex_male" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_333"
                android:textStyle="bold"
                tools:text="23" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_start_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black_333"
                    android:textStyle="bold"
                    tools:drawableStart="@mipmap/icon_sex_male"
                    tools:text="摩羯座" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_333"
                android:textStyle="bold"
                tools:drawableStart="@mipmap/icon_sex_male"
                tools:text="区域" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:background="@drawable/bg_shape_black_p20"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:padding="@dimen/dimen_5"
                    android:text="产品特点"
                    android:textColor="@color/black_333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_my_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/dimen_5"
                    android:textColor="@color/black_333"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold"
                    tools:text="相机\n 汽车\n王者荣耀" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:background="@drawable/bg_shape_black_p20"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:padding="@dimen/dimen_5"
                    android:text="产品适配"
                    android:textColor="@color/black_333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_like_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/dimen_5"
                    android:textColor="@color/black_333"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold"
                    tools:text="相机\n 汽车\n王者荣耀" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_68"
            android:layout_marginTop="@dimen/dimen_10"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_5">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginEnd="@dimen/dimen_15"
                android:layout_weight="1"
                android:text="@string/share_card_tips_01" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_q_code"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher" />

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
