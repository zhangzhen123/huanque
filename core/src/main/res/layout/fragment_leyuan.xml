<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_bird_air"
        app:layout_constraintBottom_toBottomOf="@+id/bird_tree"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/scenery_tree_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@mipmap/bg_bird_scene"
        app:layout_constraintBottom_toBottomOf="@+id/bird_tree"
        app:layout_constraintDimensionRatio="375:205"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/bird_tree"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:layout_marginTop="@dimen/dimen_15"
        android:src="@mipmap/bg_bird_tree"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="@dimen/dimen_63"
        android:layout_height="@dimen/dimen_33"
        android:layout_marginStart="@dimen/dimen_50"
        android:layout_marginTop="@dimen/dimen_14"
        android:background="@mipmap/icon_bird_cloud_01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="@dimen/dimen_36"
        android:layout_height="@dimen/dimen_22"
        android:layout_marginTop="@dimen/dimen_57"
        android:layout_marginEnd="@dimen/dimen_38"
        android:background="@mipmap/icon_bird_cloud_02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="53dp"
        android:layout_height="@dimen/dimen_26"
        android:layout_marginStart="@dimen/dimen_23"
        android:layout_marginTop="@dimen/dimen_29"
        android:background="@drawable/bg_shape_bird_cash"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的零钱"
            android:textColor="@color/colorAccent_lib"
            android:textSize="9sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99999"
            android:textColor="@color/white"
            android:textSize="9sp" />

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dimen_21"
        android:layout_height="@dimen/dimen_26"
        android:layout_marginStart="7dp"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_bird_red_packet"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_bird_packet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#416298"
        android:paddingStart="@dimen/dimen_12"
        android:paddingTop="@dimen/dimen_40"
        android:paddingEnd="@dimen/dimen_12"
        android:paddingBottom="@dimen/dimen_86"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bird_tree" />

    <ImageView
        android:id="@+id/iv_bottom_01"
        android:layout_width="@dimen/dimen_85"
        android:layout_height="@dimen/dimen_60"
        android:src="@mipmap/icon_bird_bottom_01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_bottom_03"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_bottom_03"
        android:layout_width="166dp"
        android:layout_height="@dimen/dimen_60"
        android:src="@mipmap/bg_bird_bottom_03"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_bottom_02"
        app:layout_constraintStart_toEndOf="@+id/iv_bottom_01" />

    <ImageView
        android:id="@+id/iv_bottom_bird"
        android:layout_width="@dimen/dimen_86"
        android:layout_height="@dimen/dimen_86"
        android:layout_marginEnd="@dimen/dimen_9"
        android:src="@mipmap/icon_bird_bottom_bird"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_bottom_03" />

    <TextView
        android:id="@+id/tv_bird_price"
        android:layout_width="137dp"
        android:layout_height="@dimen/dimen_25"
        android:layout_marginBottom="@dimen/dimen_4"
        android:background="@mipmap/bg_bird_price"
        android:drawableStart="@mipmap/icon_bird_coin"
        android:drawablePadding="@dimen/dimen_5"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="@dimen/dimen_11"
        android:paddingEnd="@dimen/dimen_14"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bottom_03"
        app:layout_constraintEnd_toEndOf="@+id/iv_bottom_03"
        app:layout_constraintStart_toStartOf="@+id/iv_bottom_03"
        tools:text="999" />

    <TextView
        android:layout_width="@dimen/dimen_53"
        android:layout_height="@dimen/dimen_14"
        android:layout_marginStart="@dimen/dimen_5"
        android:background="@mipmap/bg_bird_price_level"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        app:layout_constraintBottom_toTopOf="@+id/tv_bird_price"
        app:layout_constraintStart_toStartOf="@+id/tv_bird_price"
        tools:text="lv35" />

    <ImageView
        android:id="@+id/iv_bottom_02"
        android:layout_width="@dimen/dimen_85"
        android:layout_height="@dimen/dimen_60"
        android:src="@mipmap/icon_bird_bottom_02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_bottom_03" />


</androidx.constraintlayout.widget.ConstraintLayout>
