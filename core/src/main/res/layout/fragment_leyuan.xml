<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_top_holder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/rv_bird_packet"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csl_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/rv_bird_packet"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_bird_air"
            app:layout_constraintBottom_toBottomOf="@+id/bird_tree"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_cloud_01"
            android:layout_width="@dimen/dimen_63"
            android:layout_height="@dimen/dimen_33"
            android:layout_marginStart="@dimen/dimen_50"
            android:layout_marginTop="@dimen/dimen_33"
            android:background="@mipmap/icon_bird_cloud_01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_cloud_02"
            android:layout_width="@dimen/dimen_36"
            android:layout_height="@dimen/dimen_22"
            android:layout_marginTop="@dimen/dimen_78"
            android:layout_marginEnd="@dimen/dimen_38"
            android:background="@mipmap/icon_bird_cloud_02"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/scenery_tree_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@mipmap/bg_bird_scene"
            app:layout_constraintBottom_toBottomOf="@+id/bird_tree"
            app:layout_constraintDimensionRatio="375:205"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/bird_tree"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:src="@mipmap/bg_bird_tree"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_cai_shen"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:layout_marginStart="@dimen/dimen_95"
            android:layout_marginTop="@dimen/dimen_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bird_tree" />


        <TextView
            android:id="@+id/tv_cai_shen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_13"
            android:layout_marginEnd="@dimen/dimen_12"
            android:background="@drawable/bg_bird_function_num"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minWidth="@dimen/dimen_15"
            android:paddingStart="@dimen/dimen_3"
            android:paddingEnd="@dimen/dimen_3"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/sdv_cai_shen"
            app:layout_constraintTop_toTopOf="@+id/sdv_cai_shen"
            tools:text="99" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_bird_niu_lang"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:layout_marginTop="@dimen/dimen_53"
            android:layout_marginEnd="@dimen/dimen_35"
            app:layout_constraintEnd_toStartOf="@+id/sdv_cai_shen"
            app:layout_constraintTop_toTopOf="@+id/sdv_cai_shen" />


        <TextView
            android:id="@+id/tv_niu_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_13"
            android:layout_marginEnd="@dimen/dimen_12"
            android:background="@drawable/bg_bird_function_num"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minWidth="@dimen/dimen_15"
            android:paddingStart="@dimen/dimen_3"
            android:paddingEnd="@dimen/dimen_3"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/sdv_bird_niu_lang"
            app:layout_constraintTop_toTopOf="@+id/sdv_bird_niu_lang"
            tools:text="99" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_bird_zhi_nv"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:layout_marginEnd="@dimen/dimen_17"
            android:layout_marginBottom="@dimen/dimen_14"
            app:layout_constraintBottom_toBottomOf="@+id/bird_tree"
            app:layout_constraintEnd_toEndOf="@+id/bird_tree" />


        <TextView
            android:id="@+id/tv_zhi_nv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_13"
            android:layout_marginEnd="@dimen/dimen_12"
            android:background="@drawable/bg_bird_function_num"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minWidth="@dimen/dimen_15"
            android:paddingStart="@dimen/dimen_3"
            android:paddingEnd="@dimen/dimen_3"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/sdv_bird_zhi_nv"
            app:layout_constraintTop_toTopOf="@+id/sdv_bird_zhi_nv"
            tools:text="99" />


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_bird_shen_mi"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:layout_marginStart="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_3"
            app:layout_constraintStart_toEndOf="@+id/sdv_bird_niu_lang"
            app:layout_constraintTop_toBottomOf="@+id/sdv_cai_shen" />


        <TextView
            android:id="@+id/tv_shen_mi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_13"
            android:layout_marginEnd="@dimen/dimen_12"
            android:background="@drawable/bg_bird_function_num"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minWidth="@dimen/dimen_15"
            android:paddingStart="@dimen/dimen_3"
            android:paddingEnd="@dimen/dimen_3"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/sdv_bird_shen_mi"
            app:layout_constraintTop_toTopOf="@+id/sdv_bird_shen_mi"
            tools:text="99" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_bird_hong_bao"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:layout_marginStart="@dimen/dimen_35"
            android:layout_marginTop="@dimen/dimen_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sdv_bird_niu_lang" />


        <TextView
            android:id="@+id/tv_hong_bao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_13"
            android:layout_marginEnd="@dimen/dimen_12"
            android:background="@drawable/bg_bird_function_num"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minWidth="@dimen/dimen_15"
            android:paddingStart="@dimen/dimen_3"
            android:paddingEnd="@dimen/dimen_3"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/sdv_bird_hong_bao"
            app:layout_constraintTop_toTopOf="@+id/sdv_bird_hong_bao"
            tools:text="9" />

        <LinearLayout
            android:id="@+id/ll_redPacket"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_26"
            android:layout_marginStart="@dimen/dimen_23"
            android:layout_marginTop="@dimen/dimen_40"
            android:background="@drawable/bg_shape_bird_cash"
            android:gravity="center"
            android:minWidth="@dimen/dimen_53"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的零钱"
                android:textColor="@color/colorAccent_lib"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="9sp"
                tools:text="99.99元" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_redPacket"
            android:layout_width="@dimen/dimen_21"
            android:layout_height="@dimen/dimen_26"
            android:layout_marginStart="7dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_bird_red_packet"
            app:layout_constraintBottom_toBottomOf="@+id/ll_redPacket"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ll_redPacket" />

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_34"
            android:layout_marginEnd="@dimen/dimen_9"
            android:src="@mipmap/icon_bird_close"
            app:layout_constraintBottom_toBottomOf="@+id/ll_redPacket"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ll_redPacket" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.julun.huanque.core.widgets.DispatchRecyclerView
        android:id="@+id/rv_bird_packet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_80"
        android:background="#416298"
        android:minHeight="@dimen/dimen_300"
        android:overScrollMode="never"
        android:paddingTop="@dimen/dimen_34"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_height="@dimen/dimen_300" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80"
        android:background="#416298"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/divide"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_5"
        android:background="#37578A"
        app:layout_constraintTop_toTopOf="@+id/rv_bird_packet" />

    <LinearLayout
        android:id="@+id/iv_balance_bg"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:background="@mipmap/bg_bird_balance"
        android:minWidth="146dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/divide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divide">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_27"
            android:layout_marginStart="@dimen/dimen_5"
            android:layout_marginTop="@dimen/dimen_9"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_bird_coin" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_27"
                android:layout_marginStart="@dimen/dimen_5"
                android:layout_marginEnd="@dimen/dimen_26"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                tools:text="100000" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_balance_produce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            android:gravity="center"
            android:textColor="#FFF35B"
            android:textSize="@dimen/sp_12"
            tools:text="1500000金币/秒" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_bird_guide"
        android:layout_width="@dimen/dimen_58"
        android:layout_height="@dimen/dimen_58"
        android:src="@mipmap/icon_bird_guide"
        app:layout_constraintBottom_toBottomOf="@+id/iv_balance_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_balance_bg" />

    <ImageView
        android:id="@+id/iv_shop"
        android:layout_width="@dimen/dimen_58"
        android:layout_height="@dimen/dimen_58"
        android:src="@mipmap/icon_bird_shop"
        app:layout_constraintBottom_toBottomOf="@+id/iv_balance_bg"
        app:layout_constraintEnd_toStartOf="@+id/iv_bird_guide"
        app:layout_constraintTop_toTopOf="@+id/iv_balance_bg" />

    <ImageView
        android:id="@+id/iv_task"
        android:layout_width="@dimen/dimen_58"
        android:layout_height="@dimen/dimen_58"
        android:src="@mipmap/icon_bird_task"
        app:layout_constraintBottom_toBottomOf="@+id/iv_balance_bg"
        app:layout_constraintEnd_toStartOf="@+id/iv_shop"
        app:layout_constraintTop_toTopOf="@+id/iv_balance_bg" />

    <TextView
        android:id="@+id/tv_task_tag"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_14"
        android:layout_marginTop="@dimen/dimen_8"
        android:background="@drawable/bg_live_red_point"
        android:gravity="center"
        android:paddingStart="@dimen/dimen_3"
        android:paddingEnd="@dimen/dimen_3"
        android:text="领取"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/iv_task"
        app:layout_constraintTop_toTopOf="@+id/iv_task"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_bottom_01"
        android:layout_width="@dimen/dimen_85"
        android:layout_height="@dimen/dimen_60"
        android:src="@mipmap/icon_bird_bottom_01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_bottom_03"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_bottom_03"
        android:layout_width="166dp"
        android:layout_height="@dimen/dimen_60"
        android:src="@mipmap/bg_bird_bottom_03"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_bottom_02"
        app:layout_constraintStart_toEndOf="@+id/iv_bottom_01" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_bottom_bird"
        android:layout_width="@dimen/dimen_86"
        android:layout_height="@dimen/dimen_86"
        android:layout_marginEnd="@dimen/dimen_9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_bottom_03" />

    <TextView
        android:id="@+id/tv_recycler"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_25"
        android:drawablePadding="@dimen/dimen_5"
        android:gravity="center"
        android:maxLines="1"
        android:text="立即回收"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tv_bird_price"
        app:layout_constraintEnd_toEndOf="@+id/iv_bottom_03"
        app:layout_constraintStart_toEndOf="@+id/tv_price_level" />

    <com.julun.huanque.common.widgets.ColorfulTextView
        android:id="@+id/tv_recycler_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tv_bird_price"
        app:layout_constraintEnd_toEndOf="@+id/tv_bird_price"
        app:layout_constraintStart_toStartOf="@+id/tv_bird_price"
        tools:text="+10000"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_bird_price"
        android:layout_width="137dp"
        android:layout_height="@dimen/dimen_25"
        android:layout_marginBottom="@dimen/dimen_4"
        android:background="@mipmap/bg_bird_price"
        android:drawableStart="@mipmap/icon_bird_coin"
        android:drawablePadding="@dimen/dimen_5"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="@dimen/dimen_11"
        android:paddingEnd="@dimen/dimen_14"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bottom_03"
        app:layout_constraintEnd_toEndOf="@+id/iv_bottom_03"
        app:layout_constraintStart_toStartOf="@+id/iv_bottom_03"
        tools:text="999" />

    <TextView
        android:id="@+id/tv_price_level"
        android:layout_width="@dimen/dimen_53"
        android:layout_height="@dimen/dimen_14"
        android:layout_marginStart="@dimen/dimen_5"
        android:background="@mipmap/bg_bird_price_level"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_bird_price"
        app:layout_constraintStart_toStartOf="@+id/tv_bird_price"
        tools:text="lv35" />

    <ImageView
        android:id="@+id/iv_bottom_02"
        android:layout_width="@dimen/dimen_85"
        android:layout_height="@dimen/dimen_60"
        android:src="@mipmap/icon_bird_bottom_02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_bottom_03" />

    <FrameLayout
        android:id="@+id/mask_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/bird_mask"
            android:layout_width="@dimen/dimen_10"
            android:layout_height="@dimen/dimen_89"
            android:scaleType="fitCenter" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/bird_mask2"
            android:layout_width="@dimen/dimen_10"
            android:layout_height="@dimen/dimen_89"
            android:scaleType="fitCenter" />

        <com.julun.huanque.common.widgets.live.WebpGifView
            android:id="@+id/bird_combine_ani"
            android:layout_width="@dimen/dimen_93"
            android:layout_height="@dimen/dimen_93"
            android:scaleType="fitCenter" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
