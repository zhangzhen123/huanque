<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/guard_layer_anim_width"
    android:layout_height="@dimen/guard_layer_anim_height"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/openGuardBackroundImage"
        android:layout_width="@dimen/guard_layer_anim_width"
        android:layout_height="@dimen/guard_layer_anim_height"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/openGuardText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp"
        android:textSize="14sp"
        android:text="开通守护"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/openGuardMan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/openGuardText"
        android:layout_centerHorizontal="true"
        android:text="我是谁我是谁我是谁"
        android:textSize="14sp"
        android:textColor="@color/white" />


</RelativeLayout>