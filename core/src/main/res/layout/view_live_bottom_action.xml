<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/live_action_view_height"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/sayImage"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="@dimen/dimen_5"
        android:background="@drawable/bg_shape_black_p20"
        android:drawableStart="@mipmap/icon_live_public_chat"
        android:drawablePadding="@dimen/dimen_4"
        android:gravity="center"
        android:paddingStart="@dimen/dimen_8"
        android:paddingEnd="@dimen/dimen_16"
        android:text="聊一聊吧..."
        android:textColor="#80ffffff" />


    <androidx.legacy.widget.Space
        android:id="@+id/space"
        android:layout_width="0px"
        android:layout_height="1px"
        android:layout_weight="1" />


    <ImageView
        android:id="@+id/iv_shield"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:visibility="gone"
        tools:visibility="visible" />


    <RelativeLayout
        android:id="@+id/rl_welfare"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="6dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_task_enable"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_live_red_point"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/task_get"
            android:textColor="@color/white"
            android:textSize="6sp"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/giftImage"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="6dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/selector_live_action_gift" />

        <TextView
            android:id="@+id/tv_gift_tips"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_live_red_point"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="首充"
            android:textColor="@color/white"
            android:textSize="6sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <View
            android:id="@+id/view_gift"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:background="@drawable/bg_live_red_point" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_game"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="6dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/gameImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/selector_live_action_game" />

        <View
            android:id="@+id/tv_light_count"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_live_red_point"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_beautify"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="6dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/privateMessageLayout"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="6dp">

        <ImageView
            android:id="@+id/privateChatImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_live_private_message" />

        <TextView
            android:id="@+id/privateChatBadgeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_live_red_point"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:paddingRight="3dp"
            android:paddingBottom="1dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_one_yuan"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_live_red_point"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/task_get"
            android:textColor="@color/white"
            android:textSize="6sp"
            android:visibility="gone"
            tools:visibility="visible" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_more"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="6dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_live_more" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_to_v"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="6dp"
        android:src="@mipmap/icon_live_zoom_out"
        android:visibility="gone" />

</LinearLayout>