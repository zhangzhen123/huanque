        <ImageView
            android:id="@+id/ivback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:scaleType="fitStart"
            android:src="@mipmap/icon_back_black_01" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欢雀"
                android:textColor="@color/black_333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_6"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/ll_tag"
                app:layout_constraintStart_toEndOf="@+id/ll_tag"
                app:layout_constraintTop_toTopOf="@+id/ll_tag"
                tools:text="认证多少人" />
        </LinearLayout>


        <ImageView
            android:id="@+id/ivOperation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:paddingStart="10dp"
            android:paddingEnd="@dimen/dimen_10"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_tag_like_02"
            tools:visibility="visible" />

        <View
            android:id="@+id/header_divide"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:background="@color/divide_color"
            android:visibility="gone" />
    </FrameLayout>

