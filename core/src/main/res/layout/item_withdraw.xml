<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chargeItem"
    android:layout_width="match_parent"
    android:layout_height="57dp">

    <View
        android:id="@+id/view_bg_holder"
        android:layout_width="0px"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="@dimen/dimen_7"
        android:layout_marginRight="@dimen/dimen_7"
        android:background="@drawable/selector_pay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/withdraw_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:drawablePadding="1dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/black_333"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/withdraw_title"
        app:layout_constraintLeft_toLeftOf="@id/view_bg_holder"
        app:layout_constraintRight_toRightOf="@id/view_bg_holder"
        app:layout_constraintTop_toTopOf="@id/view_bg_holder"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="200000" />

    <TextView
        android:id="@+id/withdraw_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="1"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/view_bg_holder"
        app:layout_constraintLeft_toLeftOf="@id/view_bg_holder"
        app:layout_constraintRight_toRightOf="@id/view_bg_holder"
        app:layout_constraintTop_toBottomOf="@id/withdraw_num"
        tools:text="新人专享" />

    <TextView
        android:id="@+id/withdraw_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shape_withdraw_tip"
        android:padding="@dimen/dimen_4"
        android:gravity="center"
        android:lines="1"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="8sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="秒到账" />


</androidx.constraintlayout.widget.ConstraintLayout>