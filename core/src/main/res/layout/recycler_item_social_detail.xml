<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <View
        android:id="@+id/view_wish"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/bg_school_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_wish"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="4dp"
        android:src="@mipmap/icon_detail_school"
        app:layout_constraintBottom_toBottomOf="@id/view_wish"
        app:layout_constraintLeft_toLeftOf="@id/view_wish"
        app:layout_constraintTop_toTopOf="@id/view_wish"
        app:placeholderImage="@mipmap/logo_placeholder_medium"
        app:roundAsCircle="true" />

    <TextView
        android:id="@+id/tv_wish_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="寻找短期关系"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_wish"
        app:layout_constraintLeft_toRightOf="@id/sdv_wish"
        app:layout_constraintTop_toTopOf="@id/view_wish"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_wish"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/black_666"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@id/view_wish"
        app:layout_constraintLeft_toLeftOf="@id/tv_wish_title"
        app:layout_constraintRight_toRightOf="@id/view_wish"
        app:layout_constraintTop_toBottomOf="@id/tv_wish_title"
        tools:text="浙江大学" />

</androidx.constraintlayout.widget.ConstraintLayout>
