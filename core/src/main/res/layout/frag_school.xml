<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="423dp"
    android:background="@drawable/bg_top_radius_10">

    <View
        android:id="@+id/view_top"
        android:layout_width="0px"
        android:layout_height="46dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="学校"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/view_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_top" />

    <View
        android:layout_width="81dp"
        android:layout_height="4dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_bottom_dialog_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_top" />

    <View
        android:layout_width="0px"
        android:layout_height="377dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_top" />


    <View
        android:id="@+id/view_school"
        android:layout_width="0px"
        android:layout_height="88dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:background="@drawable/bg_school_detail"
        app:layout_constraintBottom_toTopOf="@+id/view_education"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_top"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/iv_school"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="50dp"
        android:src="@mipmap/icon_detail_school"
        app:layout_constraintBottom_toBottomOf="@id/view_school"
        app:layout_constraintLeft_toLeftOf="@id/view_school"
        app:layout_constraintTop_toTopOf="@id/view_school" />

    <View
        android:id="@+id/view_education"
        android:layout_width="0px"
        android:layout_height="88dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="38dp"
        android:background="@drawable/bg_school_detail"
        app:layout_constraintBottom_toTopOf="@+id/view_start_year"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_school" />

    <ImageView
        android:id="@+id/iv_education"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="50dp"
        android:src="@mipmap/icon_detail_education"
        app:layout_constraintBottom_toBottomOf="@id/view_education"
        app:layout_constraintLeft_toLeftOf="@id/view_education"
        app:layout_constraintTop_toTopOf="@id/view_education" />


    <View
        android:id="@+id/view_start_year"
        android:layout_width="0px"
        android:layout_height="88dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="38dp"
        android:background="@drawable/bg_school_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="13dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_education" />

    <ImageView
        android:id="@+id/iv_start_year"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="50dp"
        android:src="@mipmap/icon_detail_start_year"
        app:layout_constraintBottom_toBottomOf="@id/view_start_year"
        app:layout_constraintLeft_toLeftOf="@id/view_start_year"
        app:layout_constraintTop_toTopOf="@id/view_start_year" />


    <TextView
        android:id="@+id/tv_school_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="学校"
        android:textColor="@color/black_999"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_school"
        app:layout_constraintLeft_toRightOf="@id/iv_school"
        app:layout_constraintTop_toTopOf="@id/view_school"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/view_school"
        app:layout_constraintLeft_toLeftOf="@id/tv_school_title"
        app:layout_constraintTop_toBottomOf="@id/tv_school_title"
        tools:text="浙江大学" />


    <TextView
        android:id="@+id/tv_education_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="学历"
        android:textColor="@color/black_999"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_education"
        app:layout_constraintLeft_toRightOf="@id/iv_education"
        app:layout_constraintTop_toTopOf="@id/view_education"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_education"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/view_education"
        app:layout_constraintLeft_toLeftOf="@id/tv_education_title"
        app:layout_constraintTop_toBottomOf="@id/tv_education_title"
        tools:text="本科" />

    <TextView
        android:id="@+id/tv_start_year_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="入学年份"
        android:textColor="@color/black_999"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_start_year"
        app:layout_constraintLeft_toRightOf="@id/iv_start_year"
        app:layout_constraintTop_toTopOf="@id/view_start_year"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_start_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/view_start_year"
        app:layout_constraintLeft_toLeftOf="@id/tv_start_year_title"
        app:layout_constraintTop_toBottomOf="@id/tv_start_year_title"
        tools:text="2000年" />

</androidx.constraintlayout.widget.ConstraintLayout>
