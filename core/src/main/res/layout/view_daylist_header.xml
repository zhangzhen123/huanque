<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="0px"
        android:layout_height="0px"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_plum_flower_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1125:978"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/tv_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="很遗憾你没有入榜"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toTopOf="@id/sdv_first"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_first"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/view_first_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundAsCircle="true"
        app:roundingBorderColor="@color/primary_color"
        app:roundingBorderWidth="2dp" />

    <View
        android:id="@+id/view_foreground_first"
        android:layout_width="0px"
        android:layout_height="0px"
        android:background="@drawable/bg_header_shader_first"
        app:layout_constraintLeft_toLeftOf="@id/sdv_first"
        app:layout_constraintRight_toRightOf="@id/sdv_first"
        app:layout_constraintTop_toTopOf="@id/sdv_first"
        app:layout_constraintBottom_toBottomOf="@id/sdv_first"/>

    <View
        android:id="@+id/view_first_bottom"
        android:layout_width="0px"
        android:layout_height="0px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="375 : 93"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/living_first_tag"
        android:layout_width="@dimen/dimen_27"
        android:layout_height="@dimen/dimen_18"
        android:layout_marginBottom="@dimen/dimen_3"
        app:actualImageScaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/sdv_first"
        app:layout_constraintEnd_toEndOf="@+id/sdv_first"
        app:layout_constraintStart_toStartOf="@+id/sdv_first" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:src="@mipmap/crown_first"
        android:translationY="3dp"
        app:layout_constraintBottom_toTopOf="@id/sdv_first"
        app:layout_constraintLeft_toLeftOf="@id/sdv_first"
        app:layout_constraintTop_toTopOf="@id/sdv_first" />

    <TextView
        android:id="@+id/tv_nickname_first"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/sdv_first"
        app:layout_constraintRight_toRightOf="@id/sdv_first"
        app:layout_constraintTop_toBottomOf="@id/sdv_first"
        tools:text="空间的" />

    <TextView
        android:id="@+id/tv_score_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_nickname_first"
        app:layout_constraintRight_toRightOf="@id/tv_nickname_first"
        app:layout_constraintTop_toBottomOf="@id/tv_nickname_first"
        tools:text="7652264" />


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_second"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="9dp"
        app:layout_constraintBottom_toTopOf="@id/view_bottom_other"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ranking"
        app:layout_constraintTop_toTopOf="parent"
        app:roundAsCircle="true"
        app:roundingBorderColor="#E2F1F3"
        app:roundingBorderWidth="2dp" />

    <View
        android:id="@+id/view_foreground_second"
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_margin="2dp"
        android:background="@drawable/bg_header_shader_other"
        app:layout_constraintBottom_toBottomOf="@id/sdv_second"
        app:layout_constraintLeft_toLeftOf="@id/sdv_second"
        app:layout_constraintRight_toRightOf="@id/sdv_second"
        app:layout_constraintTop_toTopOf="@id/sdv_second" />


    <View
        android:id="@+id/view_bottom_other"
        android:layout_width="0px"
        android:layout_height="0px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="375:72"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/living_second_tag"
        android:layout_width="@dimen/dimen_27"
        android:layout_height="@dimen/dimen_18"
        android:layout_marginBottom="@dimen/dimen_3"
        app:actualImageScaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/sdv_second"
        app:layout_constraintEnd_toEndOf="@+id/sdv_second"
        app:layout_constraintStart_toStartOf="@+id/sdv_second" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:src="@mipmap/crown_second"
        android:translationY="3dp"
        app:layout_constraintBottom_toTopOf="@id/sdv_second"
        app:layout_constraintLeft_toLeftOf="@id/sdv_second"
        app:layout_constraintTop_toTopOf="@id/sdv_second" />

    <TextView
        android:id="@+id/tv_nickname_second"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/sdv_second"
        app:layout_constraintRight_toRightOf="@id/sdv_second"
        app:layout_constraintTop_toBottomOf="@id/sdv_second"
        tools:text="空间的" />

    <TextView
        android:id="@+id/tv_score_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_nickname_second"
        app:layout_constraintRight_toRightOf="@id/tv_nickname_second"
        app:layout_constraintTop_toBottomOf="@id/tv_nickname_second"
        tools:text="7652264" />


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_third"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="36dp"
        app:layout_constraintBottom_toTopOf="@id/view_bottom_other"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundAsCircle="true"
        app:roundingBorderColor="#FD962D"
        app:roundingBorderWidth="2dp" />

    <View
        android:id="@+id/view_foreground_third"
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_margin="2dp"
        android:background="@drawable/bg_header_shader_other"
        app:layout_constraintBottom_toBottomOf="@id/sdv_third"
        app:layout_constraintLeft_toLeftOf="@id/sdv_third"
        app:layout_constraintRight_toRightOf="@id/sdv_third"
        app:layout_constraintTop_toTopOf="@id/sdv_third" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/living_third_tag"
        android:layout_width="@dimen/dimen_27"
        android:layout_height="@dimen/dimen_18"
        android:layout_marginBottom="@dimen/dimen_3"
        app:actualImageScaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/sdv_third"
        app:layout_constraintEnd_toEndOf="@+id/sdv_third"
        app:layout_constraintStart_toStartOf="@+id/sdv_third" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:src="@mipmap/crown_third"
        android:translationY="3dp"
        app:layout_constraintBottom_toTopOf="@id/sdv_third"
        app:layout_constraintLeft_toLeftOf="@id/sdv_third"
        app:layout_constraintTop_toTopOf="@id/sdv_third" />

    <TextView
        android:id="@+id/tv_nickname_third"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_score_third"
        app:layout_constraintLeft_toLeftOf="@id/sdv_third"
        app:layout_constraintRight_toRightOf="@id/sdv_third"
        app:layout_constraintTop_toBottomOf="@id/sdv_third"
        tools:text="空间的" />

    <TextView
        android:id="@+id/tv_score_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_nickname_third"
        app:layout_constraintRight_toRightOf="@id/tv_nickname_third"
        app:layout_constraintTop_toBottomOf="@id/tv_nickname_third"
        tools:text="7652264" />

</androidx.constraintlayout.widget.ConstraintLayout>
