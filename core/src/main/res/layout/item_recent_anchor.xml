<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv"
        android:layout_width="0px"
        android:layout_height="0px"
        app:failureImage="@mipmap/logo_placeholder_small"
        app:failureImageScaleType="fitCenter"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="@mipmap/logo_placeholder_small"
        app:placeholderImageScaleType="fitCenter"
        app:roundAsCircle="true" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/living_tag"
        android:layout_width="@dimen/dimen_27"
        android:layout_height="@dimen/dimen_18"
        android:layout_marginBottom="@dimen/dimen_3"
        app:actualImageScaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/sdv"
        app:layout_constraintEnd_toEndOf="@+id/sdv"
        app:layout_constraintStart_toStartOf="@+id/sdv" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/black_333"
        android:textSize="@dimen/bottom_tab_font_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sdv"
        tools:text="打个打个打个打个打个打个打个打个打个打个" />

</androidx.constraintlayout.widget.ConstraintLayout>
