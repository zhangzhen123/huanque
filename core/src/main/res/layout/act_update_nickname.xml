<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.julun.huanque.common.widgets.HeaderPageView
        android:id="@+id/header_page"
        android:layout_width="0px"
        android:layout_height="44dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_sign"
        android:layout_width="0px"
        android:layout_height="54dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="昵称最多10个字（禁止填写违法内容）"
        android:maxLength="10"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:textColor="@color/black_333"
        android:textColorHint="@color/black_999"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_page" />

    <ImageView
        android:id="@+id/phone_num_clear"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_marginRight="22dp"
        android:paddingLeft="10dp"
        android:src="@mipmap/icon_close_round_01"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/et_sign"
        app:layout_constraintRight_toRightOf="@id/et_sign"
        app:layout_constraintTop_toTopOf="@id/et_sign" />


    <View
        android:layout_width="0px"
        android:layout_height="1dp"
        android:background="#F3F4F5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_sign" />

    <TextView
        android:id="@+id/tv_num_hint"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="0/10"
        android:textColor="@color/black_666"
        android:textSize="@dimen/sp_16"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_sign" />

</androidx.constraintlayout.widget.ConstraintLayout>
