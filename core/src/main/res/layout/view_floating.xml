<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_floating"
    android:layout_width="130dp"
    android:layout_height="231dp"
    android:background="@drawable/bg_floating">

    <com.julun.huanque.core.widgets.SingleVideoView
        android:id="@+id/svv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:useManager="true"
        android:layout_margin="2dp"/>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@mipmap/icon_floating_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_quiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_margin="5dp"
        android:src="@drawable/sel_floating_voice" />

</FrameLayout>
