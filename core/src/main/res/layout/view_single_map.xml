<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_height="360px"
    tools:layout_width="1035px">

    <View
        android:layout_width="0px"
        android:layout_height="0px"
        android:background="@mipmap/pic_map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_top"
        android:layout_width="0px"
        android:layout_height="0px"
        app:layout_constraintBottom_toTopOf="@id/view_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

    <ImageView
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:scaleType="fitXY"
        android:src="@mipmap/pic_map_curve"
        app:layout_constraintBottom_toTopOf="@+id/view_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_top"
        app:layout_constraintVertical_weight="2" />

    <View
        android:id="@+id/view_bottom"
        android:layout_width="0px"
        android:layout_height="0px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line"
        app:layout_constraintVertical_weight="1" />

    <View
        android:id="@+id/view_h_1"
        android:layout_width="0px"
        android:layout_height="0px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/view_h_2"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_h_2"
        android:layout_width="0px"
        android:layout_height="0px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/view_h_1"
        app:layout_constraintRight_toLeftOf="@+id/view_h_3"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view_h_3"
        android:layout_width="0px"
        android:layout_height="0px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/view_h_2"
        app:layout_constraintRight_toLeftOf="@+id/view_h_4"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view_h_4"
        android:layout_width="0px"
        android:layout_height="0px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/view_h_3"
        app:layout_constraintRight_toLeftOf="@+id/view_h_5"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view_h_5"
        android:layout_width="0px"
        android:layout_height="0px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/view_h_4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_point_1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/circle_map_yellow"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/view_h_1"
        app:layout_constraintRight_toRightOf="@id/view_h_1"
        app:layout_constraintTop_toTopOf="@id/view_h_1"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_city_name_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="城市"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/iv_point_1"
        app:layout_constraintRight_toRightOf="@id/iv_point_1"
        app:layout_constraintTop_toBottomOf="@id/iv_point_1"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_home_town_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Ta的故乡"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/iv_point_1"
        app:layout_constraintRight_toRightOf="@id/iv_point_1"
        app:layout_constraintTop_toBottomOf="@id/tv_city_name_1"
        tools:visibility="visible" />


    <ImageView
        android:id="@+id/iv_point_2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="80dp"
        android:src="@mipmap/circle_map_yellow"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/view_h_2"
        app:layout_constraintRight_toRightOf="@id/view_h_2"
        app:layout_constraintTop_toTopOf="@id/view_h_2"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_location"
        android:layout_width="48px"
        android:layout_height="66px"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginBottom="8dp"
        android:src="@mipmap/icon_location_home_page"
        app:layout_constraintBottom_toBottomOf="@id/iv_point_2"
        app:layout_constraintLeft_toLeftOf="@id/iv_point_2"
        app:layout_constraintRight_toRightOf="@id/iv_point_2" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_location_header"
        android:layout_width="38px"
        android:layout_height="38px"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="5px"
        app:layout_constraintLeft_toLeftOf="@id/iv_location"
        app:layout_constraintRight_toRightOf="@id/iv_location"
        app:layout_constraintTop_toTopOf="@id/iv_location"
        app:roundAsCircle="true" />

    <TextView
        android:id="@+id/tv_city_name_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="城市"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/iv_point_2"
        app:layout_constraintRight_toRightOf="@id/iv_point_2"
        app:layout_constraintTop_toBottomOf="@id/iv_point_2"
        tools:visibility="visible" />


    <ImageView
        android:id="@+id/iv_point_3"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/circle_map_yellow"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/view_h_3"
        app:layout_constraintRight_toRightOf="@id/view_h_3"
        app:layout_constraintTop_toTopOf="@id/view_h_3"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/tv_city_name_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="城市"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/iv_point_3"
        app:layout_constraintRight_toRightOf="@id/iv_point_3"
        app:layout_constraintTop_toBottomOf="@id/iv_point_3"
        tools:visibility="visible" />


    <ImageView
        android:id="@+id/iv_point_4"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/circle_map_yellow"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/view_h_4"
        app:layout_constraintRight_toRightOf="@id/view_h_4"
        app:layout_constraintTop_toTopOf="@id/view_h_4"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/tv_city_name_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="城市"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/iv_point_4"
        app:layout_constraintRight_toRightOf="@id/iv_point_4"
        app:layout_constraintTop_toBottomOf="@id/iv_point_4"
        tools:visibility="visible" />


    <ImageView
        android:id="@+id/iv_point_5"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/circle_map_yellow"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/view_h_5"
        app:layout_constraintRight_toRightOf="@id/view_h_5"
        app:layout_constraintTop_toTopOf="@id/view_h_5"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_city_name_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="城市"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/iv_point_5"
        app:layout_constraintRight_toRightOf="@id/iv_point_5"
        app:layout_constraintTop_toBottomOf="@id/iv_point_5"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>
