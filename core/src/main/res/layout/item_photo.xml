<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:actualImageScaleType="centerCrop"
        app:placeholderImage="@mipmap/logo_placeholder_medium"
        app:placeholderImageScaleType="fitXY"
        app:roundedCornerRadius="6dp"
        app:viewAspectRatio="1" />

    <LinearLayout
        android:id="@+id/ll_right_bottom_tag"
        android:layout_width="@dimen/dimen_51"
        android:layout_height="@dimen/dimen_18"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="@dimen/dimen_4"
        android:layout_marginBottom="@dimen/dimen_4"
        android:background="@mipmap/bg_tag_living"
        android:gravity="center_vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_right_bottom_tag"
            android:layout_width="@dimen/dimen_10"
            android:layout_height="@dimen/dimen_10"
            android:layout_marginStart="@dimen/dimen_5"
            app:actualImageScaleType="fitCenter" />

    </LinearLayout>
</FrameLayout>

