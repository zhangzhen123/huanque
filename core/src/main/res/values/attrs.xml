<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DiscreteScrollView">
        <attr name="dsv_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>
    
    <declare-styleable name="SingleVideoView">
        <attr name="useManager" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="MarqueeTextView">
        <attr name="scroll_interval" format="integer" />
        <attr name="scroll_first_delay" format="integer"/>
        <attr name="scroll_mode">
            <enum name="mode_forever" value="100"/>
            <enum name="mode_once" value="101"/>
        </attr>
    </declare-styleable>
</resources>
