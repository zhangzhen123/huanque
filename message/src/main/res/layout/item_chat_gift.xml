<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_gift"
        android:layout_width="@dimen/dimen_70"
        android:layout_height="@dimen/dimen_70"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:actualImageScaleType="fitCenter"
        app:placeholderImage="@mipmap/logo_placeholder_medium" />

    <TextView
        android:id="@+id/tv_gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:includeFontPadding="false"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/sdv_gift"
        app:layout_constraintStart_toStartOf="@+id/sdv_gift"
        app:layout_constraintTop_toBottomOf="@+id/sdv_gift"
        tools:text="礼物" />

    <TextView
        android:id="@+id/tv_gift_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:includeFontPadding="false"
        android:textColor="@color/black_999"
        android:textSize="@dimen/sp_11"
        app:layout_constraintEnd_toEndOf="@+id/tv_gift_name"
        app:layout_constraintStart_toStartOf="@+id/tv_gift_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_gift_name"
        tools:text="价格s" />


</androidx.constraintlayout.widget.ConstraintLayout>
